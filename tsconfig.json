{
    "compilerOptions": {
        "target": "es6",
        "module": "es2020",
        "lib": [
            "es5",
            "es6",
            "dom",
            "dom.iterable",
            "es2015.symbol"
        ],
        "moduleResolution": "node",
        "baseUrl": "./",
        "strict": true,
        // Enable strict type-checking options
        "skipLibCheck": true,
        // Skip type checking of declaration files
        "noImplicitAny": false,
        // Bypass raising errors on `any` type
        "vite": "*",
        "types": [
            "vite/client"
        ],
        "allowSyntheticDefaultImports": true,
        "jsx": "react"
    },
    "include": [
        "resources/js/**/*"
    ]
    // Frontend paths pattern
}
